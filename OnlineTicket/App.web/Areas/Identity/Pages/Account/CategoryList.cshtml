@page
@model App.Web.Areas.Identity.Pages.Account.CategoryModel
@{
    ViewData["Title"] = "Categories";
    int i = 1;
}
<div class="d-flex justify-content-between align-items-center">
    <h2>Category List</h2>
    <a href="~/Identity/Account/AddCategory" class="btn btn-outline-info">
        New Category
    </a>
</div>

<table class="table">
<thead>
<tr>
    <th>
        Number
    </th>
    <th>
        Name
    </th>
    <th>
       Operation
    </th>
</tr>
</thead>
<tbody>
@foreach (var item in Model.Categories)
{
    <tr>
        <td>
            @i
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            <a asp-action="" asp-route-id="@item.Id">Edit</a>
            <a asp-action="" asp-route-id="@item.Id">Delete</a>
        </td>
    </tr>
    i++;
}
</tbody>

</table>

